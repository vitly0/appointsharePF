<div class="rate">
  <div class='container'>
    <div class='row'>
      <div class='col-12'>
        <h2 class='my-5'>全予定一覧</h2>
        <table class='table'>
          <thead>
            <tr>
              <th>タイトル</th>
              <th>予定日</th>
              <th>所属部署</th>
              <th>作成者</th>
            </tr>
          </thead>
          <tbody>
            <% @schedules.each do |schedule| %>
              <tr>
                <td><%= link_to admin_schedule_path(schedule.id) do %><%= schedule.title %><% end %></td>
                <td><%= link_to admin_schedule_path(schedule.id) do %><%= schedule.full_day %><% end %></td>
                <td><%= link_to admin_schedule_path(schedule.id) do %><%= schedule.end_user.department_name %><% end %></td>
                <td><%= link_to admin_schedule_path(schedule.id) do %><%= schedule.end_user.full_name %><% end %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-2">
      </div>
    </div>
  </div>
</div>
